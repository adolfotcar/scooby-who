<%- include ("../partials/SignUpHeader") %>

<form class="form sign_up" id="form1" name="SignUpForm" accept-charset="UTF-8" action='/sign_up' method='post'>
        <h2>Sign Up</h2>
        <label>
                <i class="fa fa-user"></i>
                <input type="text" name="username" placeholder="Username" maxlength="20">
        </label>
        <label>
                <i class="fa fa-envelope"></i>
                <input type="email" name="email" placeholder="Email" maxlength="35">
        </label>
        <label>
                <i class="fa fa-lock"></i>
                <input type="password" name="password" placeholder="Password" id="myInput" maxlength="20">
                <span class="eye">
                        <i id="hide1" class="fa fa-eye"></i>
                        <i id="hide2" class="fa fa-eye-slash"></i>						
                </span>
        </label>
        <label>
                <i class="fa fa-lock"></i>
                <input type="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm Password" id="myInput" maxlength="20">
        </label>
        <button class="submit" type="submit">Submit</button>
</form>

</section>

</body>
<script type="text/javascript" src="/scripts/eye.js"></script> 
<script type="text/javascript" src="/scripts/verify.js"></script><!-- eye JS file for showing/hiding password -->
</html>